<div class="text-center">
  <h2>{{title}}</h2>
  <p>{{contents}}</p>
  <p>Created by {{username}} on {{format_date date_created}}</p>

   <form class="form new-comment-form" data-id="{{id}}">

      <div class="form-group">
        <label for="comment-text">Leave a Comment:</label>
        <textarea class="form-input" id="comment-text" name="comment-text"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </form>

  {{#if Comments.length}}
    <h2 class="text-center">Comments</h2>
		{{#each Comments as |comment|}}
		<div>
			<p>{{comment.comment}}</p>
			<p>Created by {{comment.user.username}} on {{format_date date_created}}<span></span></p>
		</div>
		{{/each}}
  {{else}}
    <h4>No Current Comments</h4>
  {{/if}}
</div>


<script src="../js/comments.js"></script>